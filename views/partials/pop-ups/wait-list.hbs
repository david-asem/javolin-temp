<div
        x-show="waitListOpened"
        x-ref="waitListHolder"
        class="hidden fixed z-100 inset-0 flex justify-center items-center bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full"
        id="my-modal"
        x-on:click.outside="closePlayer($refs.button)"
>

    <div class="relative flex flex-col px-4 py-8 bg-white shadow-md rounded-lg overflow-hidden">

        <div x-on:click="waitListOpened = false" class="absolute cursor-pointer top-0 right-0 flex items-center justify-center m-4 bg-white h-10 w-10 rounded-full">

            <img src="/images/x.svg" />

        </div>


        <div class="flex flex-col items-center pb-5">

            <img src="/images/logo.png" />

            <h2 class="text-xl text-gray-600"> Join the waitList </h2>

        </div>

        <div class="flex flex-col space-y-3">

            <div class="p-2 border flex w-96 my-1">
                <input  name="" value="" type="text" placeholder="First Name" class="w-full border-0 outline-none focus:outline-none"/>
            </div>

            <div class="p-2 border flex my-1">
                <input  name="" value="" type="text" placeholder="Last Name" class="w-full border-0 outline-none focus:outline-none"/>
            </div>

            <div class="p-2 border flex my-1">
                <input  name="" value="" type="email" placeholder="Email" class="w-full border-0 outline-none focus:outline-none"/>
            </div>

            <div class="p-2 border flex my-1">
                <input  name="" value="" type="text" placeholder="Phone Number eg (+233577719143)" class="w-full border-0 outline-none focus:outline-none"/>
            </div>

            <div class="p-2 border flex my-1">
                <input  name="" value="" type="number" placeholder="Referral Code (Optional)" class="w-full border-0 outline-none focus:outline-none"/>
            </div>

            <button type="button"
                    class="text-white cursor-pointer bg-blue-700 border hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium
                rounded-lg text-sm px-5 py-4 text-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700
                 dark:focus:ring-blue-800 inline-flex flex justify-center w-full items-center">

                <span class="block">
                    Join Wait List
                </span>

            </button>

        </div>



    </div>



</div>



