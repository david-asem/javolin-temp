<body x-data="{
                playerOpened: false,
                togglePlayer() {
                    if (this.open) {
                        return this.closePlayer()
                    }
                    this.playerOpened = true
                },
                closePlayer(focusAfter) {
                    this.playerOpened = false
                    var video = document.getElementById('mJavolinVideo');
                    video.pause();
                    video.currentTime = 0;
                    focusAfter && focusAfter.focus()
                }
            }"   x-on:keydown.escape.prevent.stop="closePlayer($refs.button)"
      x-on:focusin.window="! $refs.panel.contains($event.target) && closePlayer()"
      x-id="['dropdown-button']">


<header class="h-20 relative flex justify-between px-10 lg:px-12 xl:px-32" x-data="{ solutionsOpened: false,investorOpened: false,navOpened: false }">

    <div class="flex h-full justify-center items-center">

        <a class="mr-12 flex-none" href="/">
            <img style="height: 42px" src="/images/logo.png" />
        </a>

        {{> nav }}

    </div>

    <div></div>

    <div class="lg:flex justify-center align-center items-center hidden lg:inline-block">

        <a target="_blank" href="https://staging.app.javolin.com/login" class="text-xs flex items-center text-indigo-700 bg-blue-100 shadow-sm xl:px-8 lg:px-8 font-bold  rounded-md h-9 font-heading">
            Login
        </a>

        <a target="_blank" href="https://staging.app.javolin.com/register" class="bg-blue-800 flex items-center text-white font-bold mx-5 xl:px-8 lg:px-8 rounded-md text-xs h-9" style="box-shadow: 0 6px 16px rgba(0, 50, 160, 0.25);">
            Sign up
        </a>

    </div>


    <button class="lg:hidden" @click=" navOpened = !navOpened ">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" /></svg>
    </button>

    <div x-show="navOpened" class="absolute z-40 block lg:hidden bg-blue-800 w-full left-0 px-10 text-white right-0 top-20" style="font-family: 'Product-Sans">

        <div class=" flex flex-col space-y-3 px-3 py-5">

            <div>
               <button @click=" solutionsOpened = !solutionsOpened " class="font-bold text-sm">Solutions</button>
               <div x-show="solutionsOpened"
                   x-transition:enter="transition ease-out duration-100"
                   x-transition:enter-start="scale-0"
                   x-transition:enter-end="scale-100"
                   class="flex flex-col space-y-2 ml-2 mt-2">
                   <a href="/solutions/consumer" class="text-gray-200 text-sm">Consumer</a>
                   <a href="/solutions/business" class="text-gray-200 text-sm">Business</a>
                   <a href="/solutions/government" class="text-gray-200 text-sm">Government</a>
                   <a href="/solutions/bank" class="text-gray-200 text-sm">Banks</a>
               </div>
            </div>

            <div>
                <button @click = "investorOpened = !investorOpened" class="font-bold text-sm">Investor Relations</button>
                <div x-show="investorOpened"
                      x-transition:enter="transition ease-out duration-100"
                      x-transition:enter-start="translate-y-full"
                      x-transition:enter-end="translate-y-0"
                      class="flex flex-col space-y-1 ml-1 mt-2">

                    <button class="bg-white h-9 flex w-44  justify-center items-center text-blue-800 shadow-md rounded">
                        <span class="text-xs">Login to get started</span>

                        <svg class="w-4 h-4 mx-2 text-black" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22 2.75H2C1.59 2.75 1.25 2.41 1.25 2C1.25 1.59 1.59 1.25 2 1.25H22C22.41 1.25 22.75 1.59 22.75 2C22.75 2.41 22.41 2.75 22 2.75Z"/>
                            <path d="M16.67 22.34C16.54 22.6 16.27 22.75 16 22.75C15.89 22.75 15.77 22.72 15.67 22.67L12 20.84L8.33001 22.67C8.23001 22.72 8.11001 22.75 8.00001 22.75C7.73001 22.75 7.46001 22.6 7.33001 22.34C7.14001 21.96 7.29001 21.51 7.67001 21.33L11.25 19.54V17H12.75V19.54L16.33 21.33C16.71 21.51 16.86 21.96 16.67 22.34Z" fill="#0032A0"/>
                            <path d="M3 2V14.1C3 16 4 17 5.9 17H18.1C20 17 21 16 21 14.1V2H3ZM16.98 8.58L13.83 11.21C13.54 11.45 13.17 11.55 12.82 11.49C12.46 11.43 12.15 11.21 11.96 10.89L10.91 9.14L7.98 11.58C7.84 11.7 7.67 11.75 7.5 11.75C7.29 11.75 7.07 11.66 6.92 11.48C6.65 11.16 6.7 10.69 7.02 10.42L10.17 7.79C10.46 7.55 10.83 7.45 11.18 7.51C11.54 7.57 11.85 7.79 12.04 8.11L13.09 9.86L16.02 7.42C16.34 7.15 16.81 7.2 17.08 7.52C17.34 7.84 17.3 8.31 16.98 8.58Z" fill="#0032A0"/>
                        </svg>

                    </button>
            </div>
            </div>

            <div>
                <a class="font-bold text-sm">About Us</a>
            </div>


        </div>

    </div>

</header>



{{{ body }}}

{{>download-app}}

{{>footer}}


<div
        x-show="playerOpened"
        class="fixed z-100 inset-0 flex justify-center items-center bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full"
        id="my-modal"
        x-on:click.outside="closePlayer($refs.button)"
>


    <div class="bg-white shadow-md rounded">

        <div class="flex justify-between items-center m-2">
            <div>
                <span class="font-heading font-bold" style="font-family: 'Product-Sans';">JAVOLIN INTRO VIDEO</span>
            </div>
            <div>
                <svg x-on:click="closePlayer()" class="w-8 h-8 cursor-pointer rounded-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={3} d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
        </div>
        <video controls id="mJavolinVideo" class="w-full h-full object-contain m-2 border rounded-md"  style="width: 700px;height: 500px;">
            <source src="/videos/javolin-video.mp4" type="video/mp4">
        </video>
    </div>



</div>




</body>



</html>