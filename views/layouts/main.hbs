    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <meta name="author" content="Javolin LLC | smith sese" />
    <meta name="description" content="Digital Wallet that works for you">
    <style>
        @font-face { font-family: 'Product-Sans'; src: url('/fonts/product-sans/font-regular.ttf'); }
        @font-face { font-family: 'Product-Sans'; font-weight: bold; src: url('/fonts/product-sans/font-bold.ttf');}
        body{
            font-family: 'Inter', sans-serif;
        }
        h2 {
            font-family: 'Product-Sans';
            font-weight: bold;
            font-size: 54px;
        }
        .nav-link {
            font-family: 'Product-Sans';
        }


        button {
            font-family: 'Product-Sans';
        }



